<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vanliuzhi.org.user.center.dao.SysUserDao">

    <resultMap type="com.vanliuzhi.org.user.center.entity.SysUser" id="SysUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="headimgurl" column="headImgUrl" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="enabled" column="enabled" jdbcType="BOOLEAN"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="createtime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updatetime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserMap">
        select
          id, username, password, nickname, headImgUrl, phone, sex, enabled, type, createTime, updateTime
        from honor-user-center.sys_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysUserMap">
        select
          id, username, password, nickname, headImgUrl, phone, sex, enabled, type, createTime, updateTime
        from honor-user-center.sys_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserMap">
        select
          id, username, password, nickname, headImgUrl, phone, sex, enabled, type, createTime, updateTime
        from honor-user-center.sys_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="nickname != null and nickname != ''">
                and nickname = #{nickname}
            </if>
            <if test="headimgurl != null and headimgurl != ''">
                and headImgUrl = #{headimgurl}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="createtime != null">
                and createTime = #{createtime}
            </if>
            <if test="updatetime != null">
                and updateTime = #{updatetime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into honor-user-center.sys_user(username, password, nickname, headImgUrl, phone, sex, enabled, type, createTime, updateTime)
        values (#{username}, #{password}, #{nickname}, #{headimgurl}, #{phone}, #{sex}, #{enabled}, #{type}, #{createtime}, #{updatetime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update honor-user-center.sys_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="headimgurl != null and headimgurl != ''">
                headImgUrl = #{headimgurl},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="createtime != null">
                createTime = #{createtime},
            </if>
            <if test="updatetime != null">
                updateTime = #{updatetime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from honor-user-center.sys_user where id = #{id}
    </delete>

</mapper>